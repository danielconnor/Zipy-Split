{
	"name": "Zipy Split",
	"version": "0.5",
	"description": "Zip Split allows you to download parts of a zip archive",
	"options_page": "options.html",
	"background_page": "background.html",
	"browser_action": {
		"default_icon": "Images/zipysplit_32.png",
		"default_title": "Zip Split",
		"default_popup": "popup.html" 
	},
	"icons": { 
		"16": "Images/zipysplit_32.png",
		"48": "Images/zipysplit_48.png",
		"128": "Images/zipysplit_128.png" 
	},
	"plugins": [
    { "path": "npruntime.dll"}
	  ],
	"permissions": [
		"unlimited_storage",
		"http://*/*", 
		"https://*/*",
		"notifications",
		"contextMenus",
		"tabs"
	]
}